<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".Gpa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="35dp"
            android:scaleType="fitCenter"
            android:layout_height="38dp"
            android:src="@drawable/back"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">


            <!-- Web layout  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="6dp"
                android:background="@drawable/gpa_pic">

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:background="@drawable/gpa_pic"
                    android:padding="10dp"
                    android:text="Web Engineering"/>






                <EditText
                    android:id="@+id/web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:background="@drawable/gpa_pic"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:hint="Score"/>

                <TextView
                    android:id="@+id/web_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:hint="Grade"/>

                <TextView

                    android:id="@+id/web_grade_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:hint="Grade Point"/>


            </LinearLayout>


            <!-- web layout close -->




            <!-- analysis algo layout   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="6dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/gpa_pic"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:background="@drawable/gpa_pic"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:text="Analysis Algo"/>

                <EditText
                    android:id="@+id/aa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:background="@drawable/gpa_pic"
                    android:textAlignment="center"
                    android:hint="Score"/>

                <TextView
                    android:id="@+id/aa_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:hint="Grade"/>

                <TextView
                    android:id="@+id/aa_grade_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:hint="Grade Point"/>


            </LinearLayout>

            <!-- analysis algo close -->

            <!-- cloud computing  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="6dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/gpa_pic"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:background="@drawable/gpa_pic"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:text="Cloud Computing"/>

                <EditText
                    android:id="@+id/cc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:background="@drawable/gpa_pic"
                    android:textAlignment="center"
                    android:hint="Score"/>

                <TextView
                    android:id="@+id/cc_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:hint="Grade"/>

                <TextView
                    android:id="@+id/cc_grade_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:hint="Grade Point"/>


            </LinearLayout>

            <!-- cloud computing close -->

            <!-- iti infrastructure -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="6dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/gpa_pic"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:background="@drawable/gpa_pic"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:text="IT Infrastructure"/>

                <EditText
                    android:id="@+id/iti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:background="@drawable/gpa_pic"
                    android:textAlignment="center"
                    android:hint="Score"/>

                <TextView
                    android:id="@+id/iti_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:hint="Grade"/>

                <TextView
                    android:id="@+id/iti_grade_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:hint="Grade Point"/>


            </LinearLayout>

            <!-- iti close -->

            <!-- network security  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="6dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/gpa_pic"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:background="@drawable/gpa_pic"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:text="Network Security"/>

                <EditText
                    android:id="@+id/ns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:background="@drawable/gpa_pic"
                    android:textAlignment="center"
                    android:hint="Score"/>

                <TextView
                    android:id="@+id/ns_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:hint="Grade"/>

                <TextView
                    android:id="@+id/ns_grade_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:hint="Grade Point"/>


            </LinearLayout>

            <!-- network security close -->

            <!-- ma development  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="6dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/gpa_pic"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:background="@drawable/gpa_pic"
                    android:padding="10dp"
                    android:text="MA Development"/>

                <EditText
                    android:id="@+id/mad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:background="@drawable/gpa_pic"
                    android:textAlignment="center"
                    android:hint="Score"/>

                <TextView
                    android:id="@+id/mad_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:hint="Grade"/>

                <TextView
                    android:id="@+id/mad_grade_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:hint="Grade Point"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="6dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/gpa_pic"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:background="@drawable/gpa_pic"
                    android:padding="10dp"
                    android:text="Selected Subjects"/>



                <EditText
                    android:id="@+id/sub_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:hint="Enter Selected Subjects"/>


            </LinearLayout>


            <!-- ma development close -->

            <!-- result container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gpa_pic"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:text="GPA"/>

                    <TextView
                        android:id="@+id/gpa"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="10dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:text="Grade"/>

                    <TextView
                        android:id="@+id/final_grade"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="10dp"               />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:text="Percentage"/>

                    <TextView
                        android:id="@+id/final_percentage"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:text="Status"/>

                    <TextView
                        android:id="@+id/final_status"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        />

                </LinearLayout>
            </LinearLayout>



            <!-- btn container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <Button
                    android:id="@+id/calc_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded"
                    android:text="Calculate" />

                <Button
                    android:id="@+id/clear_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded"
                    android:text="Clear" />
            </LinearLayout>







        </LinearLayout>

    </ScrollView>







</LinearLayout>